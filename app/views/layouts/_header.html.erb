<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to StudentManagementSystem::Info.app_name, root_path, id: "logo", class: "button" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("label_home"), root_path %></li>
        <li><%= link_to t("label.help"), help_path %></li>
          <% if logged_in? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= t "label_account" %><b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to t("label_profile"), user_path(current_user) %></li>
                <li><%= link_to t("label_settings"), "#" %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to t("label_logout"), logout_path, method: "delete" %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to t("label_login"), login_path %></li>
          <% end %>
      </ul>
    </nav>
  </div>
  <div class="dropdown", id= "sub-menu">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
      Menu<b class="caret"></b>
    </a>
    <ul class="dropdown-menu">

      <li><%= link_to t("label_enroll"), "#{}" %></li>
      <li class="divider"></li>
      <li>
        <%= link_to t("label_report"), "#{}" %>
      </li>
    </ul>
  </div>
  <nav>
    <ul class="nav navbar-nav">
      <li><%= link_to t("label_lecturer_plural"), lecturers_path %></li>
      <li><%= link_to t("label_student_plural"), students_path %></li>
      <li><%= link_to t("label_course_plural"), courses_path %></li>
      <li><%= link_to t("label_subject_plural"), subjects_path %></li>
      <li><%= link_to t("label_classroom_plural"), classrooms_path %></li>
      <li><%= link_to t("label_news"),"#{}" %></li>
    </ul>
  </nav>
</header>

